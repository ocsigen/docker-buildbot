#! /bin/sh

if [ "$USER" != "ci" ]; then
  echo "Should be runned as 'ci'"
  exit 1
fi

set -x
set -e

DIR=$(dirname $(readlink -f $0))
DOCKERDIR=${1:-/builds/ocsigen/docker}

docker build -t ocsigen:debian_stable \
       --build-arg CACHEBUST=$(date +%s) \
       $DOCKERDIR

${DIR}/cleanup_docker
